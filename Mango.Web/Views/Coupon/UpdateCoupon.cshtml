@model CouponDto
@{

}

<form>
    <div class="mb-3">
        <label asp-for="CouponCode" class="form-label">Coupon Code</label>
        <input type="text" class="form-control" asp-for="CouponCode">
        <span class="text-danger" asp-validation-for="CouponCode"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DiscountAmount" class="form-label">Discount Amount</label>
        <input type="text" class="form-control" asp-for="DiscountAmount">
        <span class="text-danger" asp-validation-for="DiscountAmount"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MinAmount" class="form-label">Minimum Amount</label>
        <input type="text" class="form-control" asp-for="MinAmount">
        <span class="text-danger" asp-validation-for="MinAmount"></span>
    </div>
    <button type="submit" asp-controller="coupon" asp-action="UpdateCoupon" class="btn btn-primary">Submit</button>
</form>