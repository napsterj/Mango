@model IEnumerable<CouponDto>
@{
    ViewBag.title = "Coupon List";
}



<a asp-controller="coupon" asp-action="CreateCoupon" class="btn btn-info pull-right">Create Coupons</a>
<div class="panel panel-primary" style="margin-top:140px">

    <div class="panel-heading">
        <h3 class="panel-title">Existing Coupons</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Coupon Id</th>
                    <th>Coupon Code</th>
                    <th>Discount Amount</th>
                    <th>Minimum Amount</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coupon in Model)
                {
                    <tr>
                        <td>@coupon.CouponId</td>
                        <td>@coupon.CouponCode</td>
                        <td>@(coupon.DiscountAmount.ToString("c"))</td>
                        <td>@(coupon.MinAmount.ToString("c"))</td>
                        <td>
                            <a asp-controller="Coupon" asp-action="UpdateCoupon" asp-route-couponId="@coupon.CouponId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                                </svg>
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Coupon" asp-action="DeleteCoupon" asp-route-couponId="@coupon.CouponId">
                                <i class="bi bi-trash3-fill bg-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
