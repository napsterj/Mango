@using Mango.Web.Utilities
@model CartDto
@{
}

@if (Model != null && Model.CartHeaderDto != null && Model.CartDetailsDto.Count() > 0)
{
    <form method="post">
        <br />
        <div class="">
            <div class="card border mt-4 container">
                <div class="card-header bg-dark text-light ml-0 row ">
                    <div class="col-6">
                        <h3 class="text-success"><i class="bi bi-cart"></i> &nbsp; Shopping Cart</h3>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-controller="Product" asp-action="Products" class="btn btn-outline-warning mt-2 btn-sm">Continue Shopping</a>
                    </div>
                </div>
                <div class="card-body">
                    @foreach (var cartDetails in Model.CartDetailsDto)
                    {
                        <div class=" d-none d-lg-block">
                            <div class="row text-info">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-lg-5">
                                    Product Details
                                </div>
                                <div class="col-lg-2">
                                    Price
                                </div>
                                <div class="col-lg-2">
                                    Count
                                </div>
                                <div class="col-lg-1">
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row h-100">
                            <div class="col-4 col-md-2 text-center py-2">
                                <img asp-for="ImageUrl" src="@Url.Content(Enums.BaseImagePath + cartDetails.ProductDto.ImageUrl)" class="rounded" width="100%" />
                            </div>
                            <div class="col-8 col-md-5">
                                <h5>@cartDetails.ProductDto.Name</h5>
                                <div style="font-size:11px;">
                                    <p>@cartDetails.ProductDto.Description</p>
                                    <input type="hidden" value ="cartDetails.ProductDto.Description" /> 
                                </div>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                <span style="font-size:17px;">
                                    <p>@cartDetails.ProductDto.ProductPrice.Value.ToString("c")</p>
                                    <input type="hidden" value="@cartDetails.ProductDto.ProductPrice" />
                                </span>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">                                
                                <span style="font-size:17px;">
                                    <p>@cartDetails.Count.ToString()</p>
                                    <input type="hidden" value="@cartDetails.ProductDto.Count" />
                                </span>
                            </div>
                            <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                <a class="btn btn-sm btn-danger" asp-route-cartDetailsId="@cartDetails.CartDetailsId">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                        <hr />
                    }
                        <div class="row">
                            <div class="col-6">
                                <span>Coupon:</span>
                                <input  />
                                <button type="submit"  class="btn btn-sm btn-success"> Apply </button>
                            </div>
                            <div class="col-6 text-end">
                                <span class="text-danger" style="font-size:21px;">  Order Total : @Model.CartHeaderDto.CartTotal.ToString("c") <br />
                                <input type="hidden" value="@Model.CartHeaderDto.CartTotal" />
                                </span>
                            <span class="text-success"> Order Discount :  @Model.CartHeaderDto.Discount.ToString("c")
                                <input type="hidden" value="@Model.CartHeaderDto.Discount" />
                            </span>
                            </div>
                        </div>                    
                </div>
                <div class="card-footer row">
                    <div class="col-6 col-md-3 ">
                        <input type="submit" asp-action="EmailCart" asp-controller="ShoppingCart"  class="btn btn-outline-danger form-control" value="Email Cart" />
                    </div>
                    <div class="col-6 col-md-3 offset-md-6">
                        <button disabled class="btn btn-success form-control " value="Checkout (Comming Soon!)"/>
                    </div>
                </div>
            </div>
        </div>
    </form>


}
else
{
    <div class="container">
        <p class="text-danger">Add products to the cart.</p>
    </div>
}