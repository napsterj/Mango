@model List<ProductDto>
@{
    ViewBag.title = "Product List";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-info">Products List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="CreateProduct" asp-controller="Product" class="btn btn-outline-primary">
					<i class="bi bi-plus-square"></i> Create New Product
				</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Category Name
					</th>
					<th>
						Price
					</th>
					<th>View</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.CategoryName
						</td>
						<td>
							@item.ProductPrice?.ToString("c")
						</td>
						<td>
							<a asp-action="ProductDetails" asp-controller="Product" asp-route-productId="@item.ProductId" class="btn btn-success">
								<i class="bi bi-eye-fill"><span style="display:none">@item.ProductId</span></i>
							</a>
						</td>
						<td>
							<a asp-action="UpdateProduct" asp-controller="Product" asp-route-productId="@item.ProductId" class="btn btn-success">
								<i class="bi bi-pencil-square"><span style="display:none">@item.ProductId</span></i>
							</a>
						</td>
						<td>
							<a asp-action="DeleteProduct" asp-controller="Product" asp-route-productId="@item.ProductId" class="btn btn-danger">
								<i class="bi bi-trash"><span style="display:none">@item.ProductId</span></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>