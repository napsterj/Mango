@model ProductDto
@{
    ViewBag.Title = "Create new product";
}

<form method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-info text-center">Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="Name" class="form-control" placeholder="Product name..." />                
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="CategoryName" class="form-control" placeholder="Category name..." />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" asp-for="Description" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;">Image Url</label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Image url..." />
            </div>
            <div class="col-2">
                <label asp-for="ProductPrice" class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="ProductPrice" class="form-control" placeholder="Product price..." />
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Products" asp-controller="Product">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" asp-action="CreateProduct" asp-controller="Product" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>