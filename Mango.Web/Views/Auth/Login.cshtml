@model LoginRequestDto
@{
    ViewBag.Title = "Login";
}

<div class="container m-5 p-5">
<form method="post" class="border-1">
    <span class="text-danger">@Html.ValidationSummary()</span>
    <fieldset>
        <legend class="text-info mb-4">Login Form</legend>
        <div class="row">
            <label asp-for="Email" class="col-sm-2 col-form-label text-warning">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Email" placeholder="Enter your email...">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row mt-4 mb-4">
                <label asp-for="Password" class="col-sm-2 col-form-label text-warning">Password</label>
             <div class="col-sm-10">
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
                <small id="emailHelp" class="form-text text-muted">Passwords must me minimum 6 characters with one lowercase, one uppercase and a number.</small>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </fieldset>
</form>
</div>