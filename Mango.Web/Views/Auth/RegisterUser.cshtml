@model RegisterRequestDto    
@{

}

<form method="post">
    <fieldset>
        <legend class="mt-5 pt-5 mb-3 pb-3">User Registration</legend>
        <div class="row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10 mb-3">
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name..">
            </div>
        </div>
        <div class="row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10 mb-3">
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password..">
            </div>
        </div>
        <div class="row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10 mb-3">
                <input type="text" class="form-control" asp-for="Email" placeholder="Enter your email..">
            </div>
        </div>
        <div class="row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10 mb-3">
                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone..">
            </div>
        </div>
        <div class="row">
            <label asp-for="MultiRoles" class="form-label mt-4">Roles</label>
            <div class="col-sm-10 mb-3">
                <select multiple asp-for="MultiRoles" class="form-select mb-3" asp-items="Model.Roles">
                </select>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-default">Reset</button>
    </fieldset>
</form>